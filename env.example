# ============================================
# SERVER CONFIGURATION
# ============================================
# Type: Number (Integer) | Default: 5000
PORT=5000
# Type: String (Enum: development|production) | Default: development
NODE_ENV=production

# ============================================
# DATABASE (Docker automatically sets this)
# ============================================
# Type: String (MongoDB URI) | Required: Yes
# Format: mongodb://host:port/database
MONGO_URI=mongodb://mongodb:27017/folkslet

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Type: String (Secret key) | Required: Yes
# Should be a strong, random secret (minimum 32 characters)
JWTKEY=change-this-to-a-strong-secret-key
# Type: String (Time format) | Default: 1h
# Format: {number}{unit} (e.g., 1h, 24h, 7d, 30m)
JWT_EXPIRES_IN=1h

# ============================================
# CORS & RATE LIMITING
# ============================================
# Type: String (Comma-separated URLs) | Default: http://localhost:5173
# Format: url1,url2 (no spaces around commas)
CLIENT_ORIGINS=http://localhost:5173,http://localhost:80
# Type: String (Size format) | Default: 30mb
# Format: {number}{unit} (e.g., 30mb, 10mb, 1gb)
REQUEST_LIMIT=30mb
# Type: Number (Milliseconds) | Default: 900000 (15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Type: Number (Integer) | Default: 1000
RATE_LIMIT_MAX=1000

# ============================================
# FILE UPLOAD (CLOUDINARY)
# ============================================
# Type: String | Optional (all three required if using Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
# Type: String | Optional (all three required if using Cloudinary)
CLOUDINARY_API_KEY=your-cloudinary-api-key
# Type: String | Optional (all three required if using Cloudinary)
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
# Type: String (Folder path) | Default: folkslet
CLOUDINARY_UPLOAD_FOLDER=folkslet
# Type: Number (Bytes) | Default: 10485760 (10MB)
UPLOAD_MAX_FILE_SIZE=10485760

# ============================================
# SOCKET CONFIGURATION
# ============================================
# Type: Number (Integer) | Default: 8800
SOCKET_PORT=8800
# Type: String (Comma-separated URLs) | Default: http://localhost:5173
# Format: url1,url2 (no spaces around commas)
SOCKET_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:80
# Type: Number (Milliseconds) | Default: 25000 (25 seconds)
SOCKET_PING_TIMEOUT=25000
# Type: Number (Milliseconds) | Default: 20000 (20 seconds)
SOCKET_PING_INTERVAL=20000
# Type: Number (Bytes) | Default: 1048576 (1MB)
SOCKET_MAX_PAYLOAD=1048576

# ============================================
# SCHEDULED JOBS
# ============================================
# Type: String (Boolean: "true"|"false") | Default: false
DISABLE_DIGEST_JOB=false
# Type: String (Cron expression) | Default: 30 5 * * *
# Format: minute hour day month weekday
DIGEST_CRON=30 5 * * *
# Type: String (Boolean: "true"|"false") | Default: false
DISABLE_TREND_JOB=false
# Type: String (Cron expression with seconds) | Default: */45 * * * * *
# Format: second minute hour day month weekday
TREND_CRON=*/45 * * * * *
# Type: Number (Integer - Hours) | Default: 24
TREND_LOOKBACK_HOURS=24
# Type: Number (Integer) | Default: 200
TREND_SAMPLE_LIMIT=200

# ============================================
# LOGGING
# ============================================
# Type: String (Enum) | Default: INFO
# Values: ERROR, WARN, INFO, DEBUG (case-insensitive)
LOG_LEVEL=INFO

# ============================================
# TIMEZONE
# ============================================
# Type: String (IANA timezone) | Default: UTC
# Format: IANA timezone (e.g., UTC, America/New_York, Europe/London)
TZ=UTC

# ============================================
# CLIENT CONFIGURATION (Build-time variables)
# ============================================
# Note: These are Vite build-time variables embedded during build
# They are set in docker-compose.yml but can be overridden here
VITE_API_BASE_URL=http://localhost:5000
VITE_SOCKET_URL=http://localhost:8800
VITE_WS_BASE_URL=ws://localhost:5000
VITE_PUBLIC_FOLDER=http://localhost:5000/images/
