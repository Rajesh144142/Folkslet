# Server configuration
PORT=5000
CLIENT_ORIGINS=http://localhost:5173
MONGO_URI=mongodb://localhost:27017/folkslet
JWTKEY=replace-with-strong-secret
JWT_EXPIRES_IN=1h
REQUEST_LIMIT=30mb
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000
NODE_ENV=development
TZ=UTC

# Feature flags and jobs
DISABLE_DIGEST_JOB=false
DIGEST_CRON=30 5 * * *
DISABLE_TREND_JOB=false
TREND_CRON=*/45 * * * * *
TREND_LOOKBACK_HOURS=24
TREND_SAMPLE_LIMIT=200

# Uploads and media
UPLOAD_MAX_FILE_SIZE=10485760
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_UPLOAD_FOLDER=folkslet

# WebSocket
SOCKET_MAX_PAYLOAD=1048576

# Client URLs
VITE_API_BASE_URL=http://localhost:5000
VITE_WS_BASE_URL=ws://localhost:5000
VITE_PUBLIC_FOLDER=http://localhost:5000/images/
VITE_SOCKET_URL=http://localhost:8800

